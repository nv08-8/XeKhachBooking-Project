<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái Ghế đang được chọn -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/colorPrimary" />
        </shape>
    </item>

    <!-- Trạng thái Ghế đã được đặt -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/seat_booked_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Trạng thái Ghế trống (mặc định) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/seat_available_background" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/seat_available_stroke" />
        </shape>
    </item>
</selector>
