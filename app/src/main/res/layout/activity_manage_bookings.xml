<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".activity.admin.ManageBookingsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Quản lý đặt vé" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="end">

        <Spinner
            android:id="@+id/spinnerBookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/booking_status"
            android:layout_margin="4dp" />

        <Button
            android:id="@+id/btnRefreshBookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tải lại"
            android:layout_margin="4dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBookings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvEmptyBookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Không có đơn đặt vé nào"
            android:gravity="center"
            android:textSize="16sp"
            android:visibility="visible" />

    </FrameLayout>

</LinearLayout>
