<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBarBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/textPrimary"
            app:title="Thanh toán"
            app:titleCentered="true"
            app:titleTextColor="@color/textPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Trip Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/ivBusLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_futa_logo_placeholder"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBusOperator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Futa Bus Lines"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivBusLogo"
                            app:layout_constraintTop_toTopOf="@id/ivBusLogo" />

                        <TextView
                            android:id="@+id/tvBusType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Limousine 34 chỗ"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toStartOf="@id/tvBusOperator"
                            app:layout_constraintTop_toBottomOf="@id/tvBusOperator" />

                        <ImageView
                            android:id="@+id/ivStartDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/ic_dot_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivBusLogo" />

                        <View
                            android:id="@+id/lineConnector"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#D3D3D3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintTop_toBottomOf="@id/ivStartDot"
                            app:layout_constraintBottom_toTopOf="@id/ivEndDot"
                            app:layout_constraintStart_toStartOf="@id/ivStartDot"
                            app:layout_constraintEnd_toEndOf="@id/ivStartDot"/>

                        <TextView
                            android:id="@+id/tvDepartureLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Điểm đi"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toEndOf="@id/ivStartDot"
                            app:layout_constraintTop_toTopOf="@id/ivStartDot" />

                        <TextView
                            android:id="@+id/tvPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bến xe Miền Tây"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tvDepartureLabel"
                            app:layout_constraintTop_toBottomOf="@id/tvDepartureLabel"/>

                        <TextView
                            android:id="@+id/tvDepartureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07:00"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvPickup"/>

                        <ImageView
                            android:id="@+id/ivEndDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_pin_blue"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPickup" />

                        <TextView
                            android:id="@+id/tvArrivalLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Điểm đến"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toEndOf="@id/ivEndDot"
                            app:layout_constraintTop_toTopOf="@id/ivEndDot" />

                        <TextView
                            android:id="@+id/tvDropoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bến xe Đà Lạt"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tvArrivalLabel"
                            app:layout_constraintTop_toBottomOf="@id/tvArrivalLabel"/>

                        <TextView
                            android:id="@+id/tvArrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15:00"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvDropoff"/>

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#F0F0F0"
                            app:layout_constraintTop_toBottomOf="@id/tvDropoff" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="25/07/2024"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider1" />

                        <TextView
                            android:id="@+id/tvSeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_seat"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="Ghế: A05, A06"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvDate" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Price Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"/>

                <!-- Payment Method Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn phương thức thanh toán"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/rgPaymentMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#007AFF">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbCreditCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableStart="@drawable/ic_credit_card_gray"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="Thẻ Tín dụng/Ghi nợ"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQrPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbQrPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableStart="@drawable/ic_qr_code"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="QR chuyển khoản/Ví điện tử"
                                android:textColor="@android:color/black"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPayAtOffice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbPayAtOffice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableStart="@drawable/ic_bus_payment"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="Thanh toán tại nhà xe"
                                android:textColor="@android:color/black"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                </RadioGroup>

                <!-- Card Details Form -->
                <LinearLayout
                    android:id="@+id/creditCardForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số thẻ"
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/etCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit_text"
                        android:drawableStart="@drawable/ic_credit_card_gray"
                        android:drawablePadding="12dp"
                        android:hint="**** **** **** ****"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày hết hạn"
                                android:layout_marginBottom="8dp"/>
                            <EditText
                                android:id="@+id/etExpiryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="MM/YY"
                                android:background="@drawable/bg_edit_text"
                                android:padding="16dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CVV"
                                android:layout_marginBottom="8dp"/>
                            <EditText
                                android:id="@+id/etCvv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="***"
                                android:background="@drawable/bg_edit_text"
                                android:padding="16dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giao dịch của bạn được bảo mật"
                android:drawableStart="@drawable/ic_lock_green"
                android:drawablePadding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmPayment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Thanh toán 250.000đ"
                app:cornerRadius="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
