<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBarBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/textPrimary"
            app:title="@string/title_payment"
            app:titleCentered="true"
            app:titleTextColor="@color/textPrimary" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Trip Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/ivBusLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_futa_logo_placeholder"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tvBusOperator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/app_name"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@id/ivBusLogo"
                            app:layout_constraintTop_toTopOf="@id/ivBusLogo" />

                        <TextView
                            android:id="@+id/tvBusType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pm_card"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toStartOf="@id/tvBusOperator"
                            app:layout_constraintTop_toBottomOf="@id/tvBusOperator" />

                        <ImageView
                            android:id="@+id/ivStartDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:src="@drawable/ic_dot_blue"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ivBusLogo" />

                        <View
                            android:id="@+id/lineConnector"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="#D3D3D3"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            app:layout_constraintTop_toBottomOf="@id/ivStartDot"
                            app:layout_constraintBottom_toTopOf="@id/ivEndDot"
                            app:layout_constraintStart_toStartOf="@id/ivStartDot"
                            app:layout_constraintEnd_toEndOf="@id/ivStartDot"/>

                        <TextView
                            android:id="@+id/tvDepartureLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/label_pickup"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toEndOf="@id/ivStartDot"
                            app:layout_constraintTop_toTopOf="@id/ivStartDot" />

                        <TextView
                            android:id="@+id/tvPickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_pickup"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tvDepartureLabel"
                            app:layout_constraintTop_toBottomOf="@id/tvDepartureLabel"/>

                        <TextView
                            android:id="@+id/tvDepartureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvPickup"/>

                        <ImageView
                            android:id="@+id/ivEndDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_pin_blue"
                            android:contentDescription="@null"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvPickup" />

                        <TextView
                            android:id="@+id/tvArrivalLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="@string/label_dropoff"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toEndOf="@id/ivEndDot"
                            app:layout_constraintTop_toTopOf="@id/ivEndDot" />

                        <TextView
                            android:id="@+id/tvDropoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_dropoff"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tvArrivalLabel"
                            app:layout_constraintTop_toBottomOf="@id/tvArrivalLabel"/>

                        <TextView
                            android:id="@+id/tvArrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvDropoff"/>

                        <View
                            android:id="@+id/divider1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:background="#F0F0F0"
                            app:layout_constraintTop_toBottomOf="@id/tvDropoff" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:drawableStartCompat="@drawable/ic_calendar"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/textSecondary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/divider1" />

                        <TextView
                            android:id="@+id/tvSeat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawableStartCompat="@drawable/ic_seat"
                            android:drawablePadding="8dp"
                            android:gravity="center_vertical"
                            android:text="@string/label_seats"
                            android:textColor="@color/textSecondary"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/tvDate" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Countdown for pending payment (visible only when booking is pending) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardCountdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/countdownCardBackground"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/label_hold_time"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/holo_red_dark"
                            android:textStyle="bold"
                            android:textSize="16sp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Price Breakdown Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPriceBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_subtotal"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvSubtotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="8dp" />

                        <!-- Promo input row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/etPromoCode"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:hint="@string/hint_promo_code"
                                android:background="@drawable/bg_edit_text"
                                android:padding="12dp"
                                android:inputType="text"
                                android:autofillHints="creditCardNumber" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnApplyPromo"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:text="@string/apply_promo"
                                app:cornerRadius="8dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvPromoDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_promo_details"
                            android:textColor="@color/colorPrimary"
                            android:visibility="gone"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvDiscountApplied"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@android:color/holo_green_dark"
                            android:textStyle="bold"
                            android:visibility="gone"
                            android:layout_marginTop="8dp" />

                        <View android:layout_width="match_parent" android:layout_height="8dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_total"
                                android:textColor="@color/textSecondary" />

                            <TextView
                                android:id="@+id/tvTotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text=""
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:textSize="18sp" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Payment Method Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android.text="@string/label_payment_methods"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <RadioGroup
                    android:id="@+id/rgPaymentMethods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="#007AFF">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbCreditCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                app:drawableStartCompat="@drawable/ic_credit_card_gray"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="@string/pm_card"
                                android:textColor="@android:color/black" />
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQrPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbQrPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                app:drawableStartCompat="@drawable/ic_qr_code"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="@string/pm_qr"
                                android:textColor="@android:color/black"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardPayAtOffice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">

                            <RadioButton
                                android:id="@+id/rbPayAtOffice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:checked="false"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                app:drawableStartCompat="@drawable/ic_bus_payment"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:text="@string/pm_cash"
                                android:textColor="@android:color/black"/>
                        </RelativeLayout>
                    </com.google.android.material.card.MaterialCardView>
                    
                </RadioGroup>

                <!-- Card Details Form -->
                <LinearLayout
                    android:id="@+id/creditCardForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_number_hint"
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/etCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit_text"
                        app:drawableStartCompat="@drawable/ic_credit_card_gray"
                        android:drawablePadding="12dp"
                        android:hint="@string/card_number_hint"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp"
                        android:inputType="number"
                        android:autofillHints="creditCardNumber"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/expiry_hint"
                                android:layout_marginBottom="8dp"/>
                            <EditText
                                android:id="@+id/etExpiryDate"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/expiry_hint"
                                android:background="@drawable/bg_edit_text"
                                android:padding="16dp"
                                android:inputType="date"
                                android:autofillHints="creditCardExpirationDate"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cvv_hint"
                                android:layout_marginBottom="8dp"/>
                            <EditText
                                android:id="@+id/etCvv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/cvv_hint"
                                android:background="@drawable/bg_edit_text"
                                android:padding="16dp"
                                android:inputType="numberPassword"
                                android:autofillHints="creditCardSecurityCode"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                app:drawableStartCompat="@drawable/ic_lock_green"
                android:drawablePadding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmPayment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/btn_confirm_payment"
                app:cornerRadius="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
