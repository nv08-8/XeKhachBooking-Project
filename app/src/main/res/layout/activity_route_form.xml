<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.RouteFormActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        app:title="Thông tin Tuyến đường"
        app:titleTextAppearance="@style/ToolbarTitleStyle"
        app:titleTextColor="@color/textPrimary"
        app:titleCentered="true"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Divider Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#30000000" />

    <!-- Centered Form Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp">

                        <!-- Origin Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="24dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_location_on"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Điểm đi">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtOrigin"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhập tên địa điểm xuất phát"
                                android:textSize="10sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Destination Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_flag"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Điểm đến">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtDestination"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhập tên địa điểm đến"
                                android:textSize="10sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Price Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_attach_money"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Giá vé (VNĐ)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhập giá vé tính bằng VNĐ"
                                android:textSize="10sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Duration Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_timer"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Thời gian (phút)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edtDuration"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhập thời gian di chuyển tính bằng phút"
                                android:textSize="10sp"
                                android:textColor="@color/textSecondary"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Save Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveRoute"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="32dp"
                            android:text="Lưu Tuyến đường"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:icon="@drawable/ic_check"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="28dp"
                            app:elevation="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>
