<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".activity.TripFormActivity">

    <!-- Status Bar Scrim -->
    <View
        android:id="@+id/statusBarScrim"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/appBarBackground" />

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBarBackground"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            app:title="Thông tin Chuyến đi"
            app:titleTextAppearance="@style/ToolbarTitleStyle"
            app:titleTextColor="@color/textPrimary"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#AF999999" />

    <!-- Centered Form Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingVertical="40dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="28dp">



                        <!-- Route Spinner Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="24dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Chọn tuyến đường">

                                <Spinner
                                    android:id="@+id/spinnerRoute"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Operator Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_bus_24"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Nhà xe">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etOperator"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Bus Type Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilBusType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                app:startIconDrawable="@drawable/ic_bus_type"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Loại xe">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/etBusType"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text"
                                    android:completionThreshold="1"
                                    android:imeOptions="actionDone" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Departure Time Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_departure_time"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Giờ đi">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etDepartureTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Arrival Time Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_arrival_time"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Giờ đến">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etArrivalTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Price Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_attach_money"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Giá vé (VNĐ)">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etPrice"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="numberDecimal" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Seats Total Field -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:startIconDrawable="@drawable/ic_airline_seat_recline_normal"
                                app:startIconTint="@color/colorPrimary"
                                app:boxBackgroundMode="outline"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:boxStrokeColor="@color/colorPrimary"
                                android:hint="Tổng số ghế">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etSeatsTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="52dp"
                                    android:textSize="14sp"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <!-- Save Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnSaveTrip"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="32dp"
                            android:text="Lưu Chuyến đi"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:icon="@drawable/ic_check"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/colorPrimary"
                            app:cornerRadius="28dp"
                            app:elevation="8dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>
