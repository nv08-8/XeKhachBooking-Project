<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.TripFormActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white"
            app:title="Thêm/Sửa Chuyến đi"
            app:titleTextColor="@android:color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin Chuyến đi"
                    android:textColor="@color/textPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerRoute"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittext_bg"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etOperator"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_bus_24"
                    android:drawablePadding="12dp"
                    android:hint="Nhà xe"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etBusType"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_bus_type"
                    android:drawablePadding="12dp"
                    android:hint="Loại xe"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etDepartureTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_departure_time"
                    android:drawablePadding="12dp"
                    android:hint="Giờ đi (YYYY-MM-DD HH:MM:SS)"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etArrivalTime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_arrival_time"
                    android:drawablePadding="12dp"
                    android:hint="Giờ đến (YYYY-MM-DD HH:MM:SS)"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etPrice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_attach_money"
                    android:drawablePadding="12dp"
                    android:hint="Giá vé (VNĐ)"
                    android:inputType="numberDecimal"
                    android:paddingHorizontal="16dp" />

                <EditText
                    android:id="@+id/etSeatsTotal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_airline_seat_recline_normal"
                    android:drawablePadding="12dp"
                    android:hint="Tổng số ghế"
                    android:inputType="number"
                    android:paddingHorizontal="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveTrip"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="24dp"
                    android:text="Lưu Chuyến đi"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="28dp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
