<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:stateListAnimator="@null"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/white"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@drawable/gradient_card_background">

        <!-- Icon Background Circle -->
        <View
            android:id="@+id/vIconBackground"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_gradient_blue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivPromoIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_promotions"
            android:contentDescription="Promotion Icon"
            app:layout_constraintBottom_toBottomOf="@id/vIconBackground"
            app:layout_constraintEnd_toEndOf="@id/vIconBackground"
            app:layout_constraintStart_toStartOf="@id/vIconBackground"
            app:layout_constraintTop_toTopOf="@id/vIconBackground"
            app:tint="@color/white" />

        <!-- Promo Code (Badge Style) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chipPromoCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="SALE10"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Chip"
            app:chipBackgroundColor="@color/colorPrimary"
            app:chipCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="@id/vIconBackground"
            app:layout_constraintEnd_toStartOf="@+id/btnEditPromotion"
            app:layout_constraintStart_toEndOf="@+id/vIconBackground"
            app:layout_constraintTop_toTopOf="@id/vIconBackground" />

        <TextView
            android:id="@+id/tvPromoCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/btnEditPromotion"
            app:layout_constraintStart_toEndOf="@+id/vIconBackground"
            app:layout_constraintTop_toTopOf="@id/vIconBackground"
            tools:text="SALE10" />

        <!-- Content Section -->
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnEditPromotion"
            app:layout_constraintStart_toEndOf="@+id/vIconBackground"
            app:layout_constraintTop_toBottomOf="@+id/chipPromoCode">

            <TextView
                android:id="@+id/tvPromoDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                tools:text="Giảm 10% (tối đa 30,000 VND)" />

            <TextView
                android:id="@+id/tvPromoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textSecondary"
                android:textSize="15sp"
                app:drawableStartCompat="@drawable/ic_time_24"
                android:drawablePadding="6dp"
                tools:text="Hết hạn: 31/12/2025" />
        </LinearLayout>

        <!-- Action Buttons -->
        <ImageButton
            android:id="@+id/btnEditPromotion"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circle_button_edit"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDeletePromotion"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnDeletePromotion"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/circle_button_delete"
            android:src="@drawable/ic_delete"
            android:contentDescription="Delete"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
