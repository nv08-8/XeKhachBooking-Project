<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivRouteIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_route"
                app:tint="@color/colorPrimary"
                android:layout_marginEnd="12dp" />

            <!-- Title & Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvRouteTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hà Nội - Hải Phòng"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/textPrimary" />

                <TextView
                    android:id="@+id/tvRouteDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120 km"
                    android:textSize="13sp"
                    android:textColor="@color/textSecondary" />

            </LinearLayout>

            <!-- Badge (Trip Count) -->
            <TextView
                android:id="@+id/tvRouteTripCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_confirmed"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="5 chuyến"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="12dp" />

        <!-- Route Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location_pin"
                app:tint="@color/textSecondary"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian di chuyển:"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />

            <TextView
                android:id="@+id/tvRouteDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="180 phút"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/btnEditRoute"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                app:tint="@color/white"
                android:padding="8dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/button_round_blue" />

            <ImageView
                android:id="@+id/btnDeleteRoute"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/white"
                android:padding="8dp"
                android:background="@drawable/button_round_red" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
